<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/YourTextAppearance</item>
    </style>

    <style name="YourTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/pokemon_font</item>
        <item name="android:textColor">@color/pokemon_orange</item>
    </style>
</resources>
