<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/YourTextAppearance</item>
    </style>

    <style name="YourTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/pokemon_font</item>
        <item name="android:textColor">@color/pokemon_orange</item>
    </style>

    <style name="PokemonTypeCardView">
        <item name="cardElevation">@dimen/pokemon_type_card_view_card_elevation</item>
        <item name="cardMaxElevation">@dimen/pokemon_type_card_view_max_card_elevation</item>
        <item name="cardCornerRadius">@dimen/pokemon_type_card_view_corner_radius</item>
        <item name="android:layout_margin">@dimen/pokemon_type_card_layout_margin</item>
    </style>

    <style name="TextViewPokemonElement">
        <item name="android:textSize">@dimen/pokemon_type_card_text_view_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/pokemon_pixel_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>
